.button
	z-index 1
	display flex
	justify-content center
	align-items center
	width 330px
	min-height 50px
	text-transform uppercase
	font-size 14px
	font-weight 500
	line-height 19px
	text-decoration none
	color #ffffff
	background-color $button-color-orange
	border none
	border-radius 2px
	transition filter .3s ease-in

	&__icon
		margin-right 8px
		width 16px
		height 16px

	&_pink
		background-color $button-color-pink
	&_purple
		background-color $button-color-purple
	&_blue
		background-color $button-color-blue
		
	&:hover
		filter brightness(.9)

@media(max-width 359px)
	.button
		width 280px