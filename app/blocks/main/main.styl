.main
	padding-top 76px

	&__content
		margin-top 35px
		padding 104px 120px 0
		display flex
		justify-content space-between
		min-height 600px
		background-color rgba(#000000, .2)
		background-image url(/assets/images/table.png)
		background-repeat no-repeat
		background-position center center

	&__content-wrap
		display flex
		flex-direction column
		justify-content space-between
	&__actions
		margin-top 33px
		display flex
		justify-content center
		
	&__actions-wrap
		display flex
		justify-content space-between
		min-width 540px

@media(max-width:1345px)
	.main
		padding-top 30px
		&__content
			margin-top 13px
			padding 30px 20px 0
			min-height 0
			background-image none

@media(max-width:760px)
	.main
		&__content
			flex-direction column
			align-items center

@media(max-width:600px)
	.main
		&__actions-wrap
			width 100%
			min-width 0

@media(max-width:530px)
	.main
		&__actions-wrap
			flex-direction column
			align-items center
			min-width 0
			min-height 96px

@media(max-width:410px)
	.main
		padding-top 19px
		&__content
			padding 15px 0 0
		&__actions
			margin-top 25px
			
@media(max-width:360px)
	.main
		&__content
			position relative
			&::before,
			&::after
				position absolute
				top 0
				width 15px
				height 100%
				content ''
				background-color rgba(#000000, .2)
			&::before
				left -15px
			&::after
				right -15px

@media(max-width:359px)
	.main
		&__content
			&::before,
			&::after
				display none