.login-form
	display flex
	flex-direction column
	&__text
		margin-bottom 8px
		font-size 12px
		color $popup-blue
	&__checkbox-wrap
		margin-top -15px
		margin-bottom 20px
		margin-left 3px
	&__button
		height 36px
		font-size 14px
		font-weight 500
		line-height 19px
		text-transform uppercase
		color #ffffff
		background-color $button-color-orange
		border none
		border-radius 2px
		transition background-color .3s ease-in
		&:hover
			background-color #E27616
		
	&__helpers
		margin 0 auto
		padding-top 16px
		display flex
		justify-content space-between
		width 100%
		max-width 315px

@media(max-width: 1050px)
	.login-form
		&__helpers
			flex-direction column
			align-items center

@media(max-width: 360px)
	.login-form
		&__text
			margin-bottom 1px