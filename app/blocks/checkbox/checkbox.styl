.checkbox
	position relative
	display flex
	align-items center

	&__square
		width 17px
		height 16px
		border 1px solid #707070
		border-radius 2px
	
	&__input
		position absolute
		left -9999px
		visibility hidden
		opacity 0
	
	&__title
		margin-left 13px
		display block
		font-size 14px
		line-height 19px
		user-select none
		color $gray-text
	
	&__image
		margin-top -4px
		margin-left -3px
		display none
		width 23px
		height auto
	
	&__input:checked + &__square &__image
		display block

@media(max-width: 360px)
	.checkbox
		&__title
			font-size 12px