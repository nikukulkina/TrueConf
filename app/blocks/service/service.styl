.service
	&__service-wrap
		display flex
		flex-direction column
		align-items center
		max-width 330px
		min-height 240px
		
	&__descr
		margin-top 23px
		margin-left -2px
		line-height 21px
		text-align center

@media(max-width:1000px)
	.service
		&__service-wrap
			min-height 200px

@media(max-width:760px)
	.service
		&__service-wrap
			min-height 148px

@media(max-width:360px)
	.service
		&__descr
			margin 23px 0 0
			font-size 14px